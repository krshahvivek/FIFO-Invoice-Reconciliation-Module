<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_fifo_res_config_settings" model="ir.ui.view">
        <field name="name">fifo.res.config.settings</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@name='fiscal_localization_setting_container']" position="after">
                <t groups="account.group_account_user">
                    <block title="Accounting Reconciliation" name="fifo_reconciliation_setting_container">

                        <setting
                            string="FIFO Auto Reconciliation"
                            help="Automatically reconcile posted invoices and payments using FIFO logic (by invoice date)."
                        >
                            <group>
                                <field name="fifo_auto_reconcile_enabled"/>
                                <field name="fifo_apply_customer"/>
                                <field name="fifo_apply_vendor"/>
                                <field name="fifo_max_partners_per_run"/>
                            </group>
                        </setting>

                    </block>
                </t>
            </xpath>
        </field>
    </record>
</odoo>
